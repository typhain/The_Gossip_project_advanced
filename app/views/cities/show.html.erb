<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-4">La ville chaude</h1>
      <p class="lead">Prends la température de :</p>
      <h3><%= @city.name%></h3>
    </div>

<div class="container"
<div class="card mb-4 box-shadow">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal d-flex w-100 justify-content-center">Tous les détails</h4>
          </div>
          <div class="card-body"
            <ul class="list-unstyled mt-3 mb-4"
              <% @city.users.each do |i| %>
              <p><%= i.first_name%> <%= i.last_name%> </p>
              <% i.gossips.each do |gossip| %>
              <p><%= gossip.title%></p>
              <p><em><%= gossip.content%><em></p>
              <% end %>
              <% end %>
            </ul>
          </div>
        </div>
